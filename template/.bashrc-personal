alias la='ls -a --color=auto'
alias ls='ls --color=auto'
alias py=python
$t{BATTERY}

. "$HOME/.cargo/env"
[ -f "/home/terrior/.ghcup/env" ] && source "/home/terrior/.ghcup/env" # ghcup-env
eval "$(thefuck --alias)"

RESET_="\[$(tput sgr0)\]"
BOLD_="\[$(tput bold)\]"
WHITE_="\[$(tput setaf 15)\]"
BRACKET_="\[$(tput setaf $t{BRACKET})\]"
USER_="\[$(tput setaf $t{USER})\]"
HOST_="\[$(tput setaf $t{HOST})\]"
DIR_="\[$(tput setaf $t{DIR})\]"

PS1="${BOLD_}${BRACKET_}[${USER_}\u${HOST_}@\h ${DIR_}\w${BRACKET_}]${WHITE_}$ ${RESET_}${WHITE_}"
