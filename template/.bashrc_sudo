alias ls='ls --color=auto'

RESET="\[$(tput sgr0)\]"
BOLD="\[$(tput bold)\]"
WHITE="\[$(tput setaf 15)\]"
BRACKET="\[$(tput setaf $t{BRACKET})\]"
HOST="\[$(tput setaf $t{HOST})\]"
DIR="\[$(tput setaf $t{DIR})\]"
USERSUDO="\[$(tput setaf 196)\]"
REDSUDO="\[$(tput setaf 9)\]"

PS1="${BOLD}${BRACKET}[${USERSUDO}\u${HOST}@\h ${DIR}\w${BRACKET}]${WHITE}$ ${RESET}${REDSUDO}"