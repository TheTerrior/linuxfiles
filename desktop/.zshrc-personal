if [ "$IN_NIX_SHELL" != "impure" ]; then
    case $HOST in
        ("VulpesKrovPC")
            PS1=$'%B%F{1}[%F{15}%n@%m %F{8}%~%F{1}]%F{15}$%b%f '
            ;;

        ("CobaltCanidPC")
            PS1=$'%B%F{21}[%F{15}%n%F{75}@%m %F{141}%~%F{21}]%F{15}$%b%f '
            ;;

        (*)
            echo "How did I get in the middle of nowhere?"
            echo $HOSTNAME
            ;;
    esac
else
    #PS1=$'%B%F{21}[%F{15}%n%F{75}@%m %F{141}%~%F{21}]%F{15}$%b%f '
    arrIN=(${names//:/ })
    arrSTR=${arrIN[@]}
    arrSTR1="${arrSTR:1}"
    PS1="%B%F{15}%n %F{6}in %F{15}($arrSTR1) %F{4}%~ %F{15}$%b%f "
fi



