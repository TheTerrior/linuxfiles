

#
# Applications
#

# terminal
super + Return
#	xfce4-terminal &
	alacritty &

# dmenu
super + space
	dmenu_run -nb '#282828' -sf '#2288FF' -sb '#464646' -nf '#bbbbbb' &
#			  main back     color text	  higlight box	default text
#	dmenu_run -nb '#282C34' -sf '#61AFEF' -sb '#3E4451' -nf '#bbbbbb'

# nemo
super + alt + n
	nemo &

# firefox
super + alt + f
	firefox &

# brave
super + alt + b
	brave &

# librewolf
super + alt + l
	librewolf &

# code
super + alt + v
#	vscodium &
	code &

# discord
super + alt + d
	discord &

# lf
super + alt + m
	xfce4-terminal --command lf &




#
# Restart Applications
#

# nitrogen
super + shift + b
	nitrogen --restore &

# polybar
super + shift + p
	./.config/polybar/launch.sh $ &




#
# Brightness
#

# increase
super + KP_Up
	brightnessctl set 10%+ &

super + shift + KP_Up
	brightnessctl set 1%+ &

# decrease
super + KP_Down
	brightnessctl set 10%- &

super + shift + KP_Down
	brightnessctl set 1%- &

# night mode intensities (6500 off)
super + ctrl + KP_Right
	redshift -P -O 1500 &

super + ctrl + KP_Left
	redshift -P -O 2500 &

super + ctrl + KP_Up
	redshift -P -O 3500 &

super + ctrl + KP_Down
	redshift -P -O 6500 &




#
# Audio
#

# increase
XF86AudioRaiseVolume
	amixer -M set Master 5%+ &
shift + XF86AudioRaiseVolume
	amixer -M set Master 1%+ &

# decrease
XF86AudioLowerVolume
	amixer -M set Master 5%- &
shift + XF86AudioLowerVolume
	amixer -M set Master 1%- &

# toggle mute
XF86AudioMute
	amixer -M set Master toggle &




#
# Power
#

# shutdown
super + F1
#	shutdown now
	systemctl poweroff

# reboot
super + F2
	systemctl reboot

# logout
super + F3
	bspc quit




#
# Workspaces
#

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# send to and focus the given desktop (the easy macro wasn't working)
super + ctrl + 1
	bspc node -d '^1'; bspc desktop -f '^1'

super + ctrl + 2
	bspc node -d '^2'; bspc desktop -f '^2'

super + ctrl + 3
	bspc node -d '^3'; bspc desktop -f '^3'

super + ctrl + 4
	bspc node -d '^4'; bspc desktop -f '^4'

super + ctrl + 5
	bspc node -d '^5'; bspc desktop -f '^5'

super + ctrl + 6
	bspc node -d '^6'; bspc desktop -f '^6'

super + ctrl + 7
	bspc node -d '^7'; bspc desktop -f '^7'

super + ctrl + 8
	bspc node -d '^8'; bspc desktop -f '^8'

super + ctrl + 9
	bspc node -d '^9'; bspc desktop -f '^9'

super + ctrl + 0
	bspc node -d '^10'; bspc desktop -f '^10'




#
# Windows
#

# close window
super + shift + z
	bspc node -c

# kill process (all instances)
super + shift + x
	bspc node -k

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local
super + y
	bspc node -n 'last.!automatic.local'

# focus the node in the given direction
#super + {_,shift + }{Left,Down,Up,Right}
#	bspc node -{f,s} {west,south,north,east}
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# move the node in the given direction
super + shift + {h,j,k,l}
	$HOME/.config/sxhkd/bspwm_smart_move {west,south,north,east}
#	bspc node -s {west,south,north,east}

# preselect the direction
super + {n,m,comma,period}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + slash
	bspc node -p cancel

# expand a window by moving one of its side outward
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
#super + {Left,Down,Up,Right}
#	bspc node -v {-20 0,0 20,0 -20,20 0}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next




#
# Configs
#

# restart bspwm
super + shift + r
	bspc wm -r

# restart sxhkd
super + shift + t
	pkill -USR1 -x sxhkd






